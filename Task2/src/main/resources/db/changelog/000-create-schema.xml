<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        logicalFilePath="db/changelog/000-create-schema.xml">

    <changeSet id="000-create-schema" author="hin1k" runAlways="true">
        <!-- Create the finance schema if it doesn't already exist -->
        <sql>CREATE SCHEMA IF NOT EXISTS finance;</sql>

        <!-- Set the default schema for the current session -->
        <sql>SET search_path TO finance;</sql>
    </changeSet>
</databaseChangeLog>